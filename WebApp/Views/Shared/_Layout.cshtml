<!DOCTYPE html>
<html lang="en-sv">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script defer src="https://kit.fontawesome.com/41c8b474e2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    @* <title>@ViewData["Title"] - Silicon</title> *@
    @if (!string.IsNullOrWhiteSpace(ViewData["Title"]?.ToString()))
    {
        <title>@ViewData["Title"] - Silicon</title>
    }
    else
    {
        <title>Silicon</title>
    }

</head>

<body>
 
    <div class="wrapper">
        <header>
            <div class="container">
                <a id="logo" asp-controller="Home" asp-action="Index"><img src="~/images/silicon-logo-light_theme.svg" alt=""></a>

                <div id="menu">
                    <nav>
                        <a class="menu-link" href="#overview">Overview</a>
                        <a class="menu-link" href="#features">Features</a>
                        <a class="menu-link" asp-controller="Contact" asp-action="Index">Contact</a>
                    </nav>
                </div>

                <div class="btn-switch">
                    <label>Light</label>
                    <label class="switch" for="switch-mode">
                        <input type="checkbox" id="switch-mode" />
                        <div class="slider round"></div>
                    </label>
                    <label>Dark</label>
                </div>

                <div class="account-buttons">
                    <a class="btn-gray" asp-controller="Account" asp-action="SignIn"><i class="fa-regular fa-right-to-bracket"></i><span>Sign In</span></a>
                    <a class="btn-theme" asp-controller="Account" asp-action="SignUp"><i class="fa-regular fa-user"></i><span>Sign Up</span></a>
                </div>

            </div>
        </header>
        <main>
            @RenderBody()
        </main>

        <footer>
            
            <div class="container">
                <div class="@((ViewContext.RouteData.Values["Controller"]!.ToString() == "Account") ? "d-none" : "social-media")">
                    <a class="btn-social" href="https://facebook.com/" target="_blank"><i class="fa-brands fa-facebook"></i></a>
                    <a class="btn-social" href="https://twitter.com/" target="_blank"><i class="fa-brands fa-square-x-twitter"></i></a>
                    <a class="btn-social" href="https://instgram.com/" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                    <a class="btn-social" href="https://www.youtube.com/" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                </div>
                <p>
                    &copy; @DateTime.Now.Year Silicon. All rights reserved. Pulvinar urna condimentum amet tempor, ornare integer. Lorem
                    odio justo malesuada suspendisse viverra aliquet quisque turpis non. Feugiat in odio non nunc ornare
                    consectetur.
                </p>
            </div>
        </footer>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @* @await RenderSectionAsync("Scripts", required: false) *@

</body>

</html>